<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/liveratesbarrrr"
            android:id="@+id/imageView10"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            app:srcCompat="@drawable/newsbutton"
            android:scaleType="fitEnd"
            android:background="#00ffffff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ibNewsBlack" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/liveratesbuttonblue"
            android:id="@+id/ibLiveRates"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ibEconCalBlack"
            android:layout_toEndOf="@+id/ibEconCalBlack" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/settingsbuttongrey"
            android:id="@+id/ibSettingsBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            app:srcCompat="@drawable/economiccalendarbuttongrey"
            android:id="@+id/ibEconCalBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ibNewsBlack"
            android:layout_toEndOf="@+id/ibNewsBlack" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp" />

                <TextView
                    android:id="@+id/sharenameID"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="20dp"
                    android:text="Name:"
                    tools:textSize="18sp"
                    tools:textStyle="bold" />

                <TextView
                    android:id="@+id/sharesymbolID"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Symbol:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharepriceID"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Last price:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharechangeID"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Live change:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharepercentagechangeID"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Change %"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharevolumeID"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Volume:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/chareperatioID"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="PE Ratio:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharedayshighID"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Days High:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharedayslowID"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Days Low:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharemarketcapID"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="Market Cap:"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/buttonTest1"
            android:layout_width="208dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout3"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="79dp"
            android:elevation="0dp"
            android:text="buttonTest1" />
    </LinearLayout>


</RelativeLayout>