<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liutaurasmazonas.cslogintrying.ChangePasswordActivity">


    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/changespasswordbarrrr"
        android:id="@+id/imageView6"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="70dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            app:srcCompat="@drawable/topbarcremebackgroundddd"
            android:id="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="790dp"
            android:scaleType="matrix"
            android:layout_height="65dp" />

        <ImageButton
            app:srcCompat="@drawable/pluss"
            android:id="@+id/imageButton"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="7dp" />

        <ImageView
            app:srcCompat="@drawable/bestsearchbar"
            android:id="@+id/imageView4"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:layout_width="210dp"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:layout_height="45dp" />

        <ImageButton
            app:srcCompat="@drawable/bell"
            android:id="@+id/imageButton2"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            app:srcCompat="@drawable/newsbutton"
            android:scaleType="fitEnd"
            android:background="#00ffffff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ibNews" />

        <ImageButton
            app:srcCompat="@drawable/economiccalendarbuttongrey"
            android:id="@+id/ibEconCal"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:cropToPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/liveratesbuttongrey"
            android:id="@+id/ibLiveRates"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ibEconCal"
            android:layout_toEndOf="@+id/ibEconCal" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/settingsbuttongrey"
            android:id="@+id/ibSettingsBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:layout_height="270dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignTop="@+id/etCurrentPassword"
            android:layout_toRightOf="@+id/etCurrentPassword"
            android:layout_toEndOf="@+id/etCurrentPassword"
            android:id="@+id/etCurrentPasswordBox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="New"
            android:ems="10"
            android:layout_below="@+id/etCurrentPassword"
            android:layout_toStartOf="@+id/etCurrentPasswordBox"
            android:layout_marginTop="11dp"
            android:id="@+id/etNewPassword"
            android:layout_toLeftOf="@+id/etCurrentPasswordBox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etNewPasswordBox"
            android:layout_alignBaseline="@+id/etNewPassword"
            android:layout_alignBottom="@+id/etNewPassword"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/etNewPassword"
            android:layout_toEndOf="@+id/etNewPassword" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Retype new"
            android:ems="10"
            android:id="@+id/etRetypeNewPassword"
            android:layout_below="@+id/etNewPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/etNewPasswordBox"
            android:layout_toStartOf="@+id/etNewPasswordBox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignTop="@+id/etRetypeNewPassword"
            android:layout_toRightOf="@+id/etRetypeNewPassword"
            android:layout_toEndOf="@+id/etRetypeNewPassword"
            android:id="@+id/etRetypeMewPasswordBox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Current"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/etCurrentPassword"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_marginTop="57dp"
        android:layout_height="500dp"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true">

        <Button
            android:text="Save"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/bSave"
            android:background="#003662"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:onClick="save"
            android:layout_alignBaseline="@+id/bCancel"
            android:layout_alignBottom="@+id/bCancel"
            android:layout_toLeftOf="@+id/bCancel"
            android:layout_toStartOf="@+id/bCancel" />

        <Button
            android:text="Cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/bCancel"
            android:background="#2B292A"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>

    </RelativeLayout>