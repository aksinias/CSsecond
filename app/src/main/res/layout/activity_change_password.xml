<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liutaurasmazonas.cslogintrying.ChangePasswordActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/changepasswordtitle"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        app:srcCompat="@drawable/home"
        android:id="@+id/ibHome"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:cropToPadding="false"
        android:layout_height="65dp"
        android:layout_marginLeft="-12dp"
        android:adjustViewBounds="true"
        android:layout_width="90dp" />

    <ImageButton
        android:layout_height="65dp"
        app:srcCompat="@drawable/settings"
        android:id="@+id/ibSettings"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_width="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_height="65dp"
        app:srcCompat="@drawable/settingsblack"
        android:layout_alignParentBottom="true"
        android:id="@+id/ibSettingsblack"
        tools:layout_width="90dp"
        android:layout_alignLeft="@+id/ibSettings"
        android:layout_alignStart="@+id/ibSettings"
        android:layout_below="@+id/bChangePassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:layout_width="90dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/econcal"
        android:id="@+id/ibEconCal"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp" />

    <ImageButton
        app:srcCompat="@drawable/liverates"
        android:id="@+id/ibLiveRates"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:cropToPadding="false"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_toLeftOf="@+id/ibSettings"
        android:layout_toStartOf="@+id/ibSettings"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-6dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Current"
        android:ems="10"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/ibEconCal"
        android:layout_alignEnd="@+id/ibEconCal"
        android:layout_marginTop="15dp"
        android:id="@+id/etCurrentPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignTop="@+id/etCurrentPassword"
        android:layout_toRightOf="@+id/etCurrentPassword"
        android:layout_toEndOf="@+id/etCurrentPassword"
        android:id="@+id/etCurrentPasswordBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="New"
        android:ems="10"
        android:layout_below="@+id/etCurrentPassword"
        android:layout_toStartOf="@+id/etCurrentPasswordBox"
        android:layout_marginTop="11dp"
        android:id="@+id/etNewPassword"
        android:layout_toLeftOf="@+id/etCurrentPasswordBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etNewPasswordBox"
        android:layout_alignBaseline="@+id/etNewPassword"
        android:layout_alignBottom="@+id/etNewPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/etNewPassword"
        android:layout_toEndOf="@+id/etNewPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Retype new"
        android:ems="10"
        android:id="@+id/etRetypeNewPassword"
        android:layout_below="@+id/etNewPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@+id/etNewPasswordBox"
        android:layout_toStartOf="@+id/etNewPasswordBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignTop="@+id/etRetypeNewPassword"
        android:layout_toRightOf="@+id/etRetypeNewPassword"
        android:layout_toEndOf="@+id/etRetypeNewPassword"
        android:id="@+id/etRetypeMewPasswordBox" />

    <Button
        android:text="Save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/bSave"
        android:background="#003662"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/etRetypeNewPassword"
        android:layout_toLeftOf="@+id/ibLiveRates"
        android:layout_toStartOf="@+id/ibLiveRates"
        android:layout_marginRight="-5dp"
        android:onClick="save" />

    <Button
        android:text="Cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/bCancel"
        android:background="#2B292A"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/bSave"
        android:layout_alignBottom="@+id/bSave"
        android:layout_toRightOf="@+id/etRetypeNewPassword"
        android:layout_toEndOf="@+id/etRetypeNewPassword" />


</RelativeLayout>
